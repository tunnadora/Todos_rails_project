<p id="notice"><%= notice %></p>

<h1>Todos</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>State date</th>
      <th>Description</th>
      <th>Assign to</th>
      <th>User</th>
      <th>Status</th>
      <th>Sprint</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.name %></td>
        <td><%= todo.state_date %></td>
        <td><%= todo.description %></td>
        <td><%= User.find_by(id:todo.assignuser).name %></td>
        <td><%= User.find_by(id:todo.user_id).name  %></td>
        <td><%= todo.status %></td>
        <td><%= Sprint.find_by(id:todo.sprint_id).version %></td>
        
        <td><%= link_to 'Show', todo %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo , sprint_id: @sprint.id ) %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Todo', new_todo_path(sprint_id: @sprint.id) %>
