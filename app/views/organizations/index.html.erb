



<%= will_paginate @organizations %>


<br/><br/><br/>
                
    <% @organizations.each do |organization| %>






    <div class="row">
        <div class="small-2 large-4 columns"> <h3> <%= link_to organization.name  , sprints_path(organization_id: organization.id) , class:"button  " %> </h3></div>
        <div class="small-8 large-4 columns">
 <%=  image_tag organization.logo_url(:thumb).to_s ,   style:"border:5px white solid;border-radius: 125px;"   %> 


        </div>
        <div class="small-2 large-4 columns">&nbsp;</div>
    </div>

    <div class="row">
        <div class="small-2 large-4 columns">...</div>
        <div class="small-8 large-4 columns">
         <% if user_signed_in? %>
           <% if current_user.admin? %>
             <%= link_to 'Show', organization_path(organization) , class:"button  alert tiny radius" %>

             <%= link_to 'Edit', edit_organization_path(organization) , class:"button  success tiny radius" %>

             <%= link_to 'Destroy', organization, method: :delete, data: { confirm: 'Are you sure?' } , class:"button  alert tiny radius"%>
            <% end %>
        <% end %>
        </div>
        <div class="small-2 large-4 columns">...</div>
    </div>
      
    
        
        
  <hr/>
   <% end %>